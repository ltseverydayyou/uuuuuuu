local function fire(service, action, args)
    if args then
    game:GetService("ReplicatedStorage").Framework.RemoteFunction:InvokeServer(service, action, args)
    else
    game:GetService("ReplicatedStorage").Framework.RemoteFunction:InvokeServer(service, action)
    end
end

local function redeemCodes(codes)
    for _, code in ipairs(codes) do
        fire("CodeService", "Redeem", {code})
        task.wait(2)
    end
end

function ballz()
    local args = {
        [1] = "RewardService",
        [2] = "ClaimDailyReward",
        [3] = {}
    }
    
    game:GetService("ReplicatedStorage").Framework.RemoteFunction:InvokeServer(unpack(args))
    task.wait(1)

    local codes = {
        "THEUPDATEISREAL",
        "50M-OMG",
        "450KFANS",
        "GAMEISALIVE!",
        "THE0NEP1ECEISREAL",
        "FIREUPDATE!",
        "124000LIKES",
        "35MIL",
        "TOURNEYSARECOOL",
        "ANIMEBALLISCOOL",
        "400KGROUPMEMBERSYO",
        "PROGAME!",
        "85KLIKES",
        "15MTHANKS",
        "SORRY4DELAY",
        "HYPE!",
        "YOURETHEBEST"
    }

    redeemCodes(codes)
end

function spin()
    fire("CrateService", "BuyCrate", {"SwordA1", 1})
    fire("RewardService", "BuySpinWheel", {})
end

spawn(ballz)
task.wait(5)
while task.wait() do
    spawn(spin)
    if game.PlaceId ~= 15440283215 then
        game.Players.LocalPlayer.PlayerGui.SpinWheel.Holder.Visible = true
    end
end
